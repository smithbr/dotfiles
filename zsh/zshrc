# Aliases
source ~/.shell/aliases.sh
export PATH=/usr/local/bin:$PATH

# Secrets file
source ~/.shell/secrets.sh

# External settings
source ~/.shell/external.sh

if [[ "$(uname -s)" == "Darwin" ]]
then
    source ~/.shell/macOS.sh
else
    echo "There are no custom shell scripts for this OS. Skipping..."
fi

# Theme custom settings
ZSH_THEME="spaceship"
source ~/.zsh/spaceship.zsh

export ZSH=$HOME/.oh-my-zsh

plugins=(git colored-man colorize github jira vagrant virtualenv pip python brew osx zsh-syntax-highlighting zsh-autosuggestions)

# Finally...
source $ZSH/oh-my-zsh.sh

# Load spaceship-prompt
autoload -U promptinit; promptinit
prompt spaceship
