	email = 1495361+smithbr@users.noreply.github.com
    username = smithbr
[core]
    editor = code
    ignorecase = false
    excludesfile = ~/.gitignore_global
[include]
	path = ~/.gitconfig.local
[init]
    defaultBranch = main
[pull]
	rebase = true
[push]
	autoSetupRemote = true
	default = current
[rebase]
	updateRefs = true
[alias]
    main = !git checkout main && git fetch && git pull origin main
	cm = !git add -A && git commit -m
    amend = commit --amend --no-edit
    undo = !git reset --soft HEAD^1 && git reset
    recent = branch --sort=-committerdate
    cleanup = !git branch --no-color | fzf -m | xargs -I {} git branch -D '{}'
    br = branch
    co = checkout
    df = difftool
    l = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)%an%d%Creset %s %Cgreen(%cr)%Creset' --date=relative
    pu = push -u
    st = status
[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[diff]
	tool = code
[merge]
	tool = code
[difftool]
	prompt = false
