#!/usr/bin/env bash

if [ -z "$HOME" ];
then
    echo "Seems you're \$HOMEless :(";
    exit 1;
fi

echo -e "\\n\\nLinking dotfiles..."
echo "========================================"
set -e

CONFIG=".install.conf.yaml"
DOTBOT_DIR=".dotbot"

DOTBOT_BIN="bin/dotbot"
BASEDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

cd "${BASEDIR}"
git submodule update --init --force --recursive "${DOTBOT_DIR}"

"${BASEDIR}/${DOTBOT_DIR}/${DOTBOT_BIN}" -d "${BASEDIR}" \
--plugin-dir dotbot/plugins/dotbot-pip \
--plugin-dir dotbot/plugins/dotbot-brew \
-c "${CONFIG}" "${@}"

if [[ "$(uname -s)" == "Darwin" ]];
then
    echo -e "\\n\\nStarting macOS..."
    echo "========================================"
    echo "No macOS install scripts in the macOS/ folder."
elif [[ "$( uname )" == "Linux" ]];
then
    echo -e "\\n\\nStarting Linux..."
    echo "========================================"
    chmod +x linux/apt.sh && ./linux/apt.sh
else
    echo "Can't detect OS."
fi

echo -e "\\n\\nStarting Homebrew..."
echo "========================================"
chmod +x homebrew/brew.sh && ./homebrew/brew.sh

echo -e "\\n\\nInstalling python packages..."
echo "========================================"
pip_path="$( which pip )"
$pip_path install --user -r pip/requirements.txt

echo -e "\\n\\nInstalling antigen.zsh..."
echo "========================================"
echo $antigenpath
curl -L git.io/antigen > $HOME/.dotfiles/antigen/antigen.zsh

echo -e "\\n\\nChanging default shell to zsh..."
echo "========================================"
zsh_path="$( which zsh )"
if ! grep "$zsh_path" /etc/shells;
then
    echo "adding $zsh_path to /etc/shells"
    echo "$zsh_path" | sudo tee -a /etc/shells
fi
if [[ "$SHELL" != "$zsh_path" ]];
then
    chsh -s "$zsh_path"
    echo "default shell changed to $zsh_path"
fi

echo -e "\\n\\nDone."
echo "========================================"
